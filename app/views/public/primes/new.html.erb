<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h3 class="m-3 text-center">数字を入力</h3>
    </div>
  </div>
  <%= form_with model: @prime, url: primes_path,method: :post,local:true do |f| %>
    <div class="row">
      <div class="mx-auto col-10 col-md-6 col-lg-5 pt-lg-5 pt-md-5">
        <div class="form-group">
          <%= f.label :数字 %>
          <%= f.text_field :int, class: "form-control" %>
        </div>
        <div class="form-group my-5 pt-lg-3 text-center">
          <%= f.submit"検証する",class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>