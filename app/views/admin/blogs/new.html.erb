<div class="container">
  <div class="row">
    <div class="col mx-auto">
      <h3 class="m-3 text-center">新規投稿</h3>
    </div>
  </div>
  <%= form_with model: @blog, url: admin_blogs_path,method: :post,local:true do |f| %>
    <div class="row">
      <div class="mx-auto col-10 col-md-6 col-lg-5 pt-lg-5 pt-md-5">
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :本文 %>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <div class="form-group my-5 pt-lg-3 text-center">
          <%= f.submit"投稿",class: "btn btn-success" %>
        </div>
      </div>
    </div>
  <% end %>
</div>